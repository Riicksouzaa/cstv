<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.CSTV" parent="Theme.Material3.Dark.NoActionBar">
        <!--        make changes here-->
        <item name="android:navigationBarColor">@color/black_background</item>
        <item name="android:statusBarColor">@color/black_background</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>

        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Theme.CSTV" parent="Base.Theme.CSTV" />

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:navigationBarColor">@color/black_background</item>
        <item name="android:statusBarColor">@color/black_background</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="Toolbar.TitleTextSmall" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
    </style>
</resources>